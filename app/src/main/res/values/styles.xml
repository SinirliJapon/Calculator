<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="linearRow">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="numberButton">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/button_border</item>
        <item name="color">@color/grey</item>
        <item name="android:textSize">25sp</item>
        <item name="android:onClick">buttonClick</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="operationButton">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/button_border_operation</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/lightGrey</item>
        <item name="android:onClick">buttonClick</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="resultButton">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/button_border_result</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:onClick">buttonClick</item>
        <item name="android:layout_margin">4dp</item>
    </style>

</resources>